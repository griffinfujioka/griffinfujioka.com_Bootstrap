@using (Html.BeginForm("sendEmailBtnClick", "examplelayouts", new EmailMessage(),FormMethod.Get, new Form{@id="contactForm", @name="contactForm"}))
{
    

    <div class="container-fluid">
        <div class="row-fluid">
            <h2>Contact</h2>
        </div>
        <div class="row-fluid">
            <div class="span3">
                <table class="table">
                    <tr>
                        <th style="min-width: 140px;"> <a class="icon-github icon-2x" href="http://www.github.com/griffinfujioka" style="text-decoration:none;"></a></th>
                        
                        <th style="min-width: 140px;"><a class="icon-linkedin icon-2x" style="text-decoration:none;font-size:medium;" href="http://www.linkedin.com/profile/view?id=63016629&trk=tab_pro"></a></th>
                        <th style="min-width: 140px;"><a  style="text-decoration:none;font-size:medium;" href="http://griffinfujioka.tumblr.com/">Tumblr</a></th>
                        <th style="min-width: 140px;"><a style="text-decoration:none;font-size:medium;" href="http://8tracks.com/griffinfujioka">8tracks</a></th>
                    </tr>

                    <thead>
                    </thead>
                </table>


            </div>
        </div>
        <div class="row-fluid">
            <div class="span9">
                <table class="table">
                    <thead>
                    </thead>
                    <tr>
                        <td style="width:110px;">Name</td>
                        <td >
                            <input name="Name" id="Name" type="text" style="width:200px;" class="span4" placeholder="Enter your name">
                        </td>
                    </tr>
                    <tr>
                        <td>E-mail Address</td>
                        <td>
                            <input name="FromEmailAddress" id="FromEmailAddress" type="text" class="span4" placeholder="Enter your e-mail address">
                        </td>
                    </tr>
                    <tr>
                        <td>Subject</td>
                        <td>
                            <input name="Subject" id="Subject" type="text" class="span4" placeholder="Enter a subject">
                        </td>
                    </tr>
                    <tr>
                        <td>Message</td>
                        <td>
                           <textarea class="span4" name="Message" id="Message" placeholder="Enter a message" form="contactForm"></textarea>
                           
                        </td>
                    </tr>
                </table>

                <div class="form-actions">
                    <button type="submit" class="btn btn-primary" onclick="sendEmailBtnClick();">Submit</button>
                        @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-primary" })
                  


                </div>
            </div>
        </div>


    </div>
}
